$main_dark = #000
$main_lite = #fff
$main_highlite = #FBD784
$main_highlite-title = #FFC178
$main_buttons = #FFA343
$main_shift = 4.7rem

html,
body {
    font 18px/1.7 'Open Sans', sans-serif
    background $main_dark url("/images/cover.jpg") no-repeat center top
    background-size 100% auto
    color $main_lite
}

a {
    color $main_highlite
    transition opacity .3s
    opacity 1

    // &:visited {
    //     color darken($main_highlite, 10)
    // }

    &:hover,
    &:active {
        opacity .7
    }
}

.content {
    padding 0 $main_shift $main_shift
    max-width 1460
    margin 0 auto

    p {
        margin-bottom 1.5em
    }

    &_small {
        max-width 934px
        padding 0 2.75rem 2.5rem
        margin 0 auto    
    }
}

.cover-space {
    padding-bottom 82%
}

.header {
    position absolute
    top 2rem
    width 100%

    &__content {
        display grid
        grid-template-columns auto 1fr auto
        padding 0 $main_shift
        align-items center
    }

    &__center {
        display flex
        justify-content center
    }
}

.logo {
    text-decoration none
    letter-spacing 1px

    &visited {
        color $main_lite
    }

    &__title {
        font-weight Bold
        color $main_lite
        font-size 1.3rem
    }
}

.main-nav {
    &__list {
        display flex
    }

    &__link {
        color $main_lite
        text-decoration none
        padding 1.8rem 1.38rem
        display inline-block
    }

    &visited {
        color  $main_lite
    }
}

.search {
    display flex
    align-items center
    justify-content center

    &__icon {
        width 1rem
        height 1rem
        background url('/images/icons/search.svg') no-repeat center center
        background-size contain
        cursor pointer
        padding-right 0.5rem
    }

    &__form {
        background none 
        border none  
        width 3.4rem
        font 0.9rem/1 'Open Sans', sans-serif
        transition width .5s
        padding 0.2rem 0.5rem
        border-radius 5px
        
        &::placeholder {
            color white;    
        }

        &:focus {
            border none 
            outline none
            width 10rem
            background white

            &::placeholder {
                color $main_dark    
            }
        }
    }
}

.section__main {
    display flex
    flex-direction column
    align-items center
    position absolute
    left $main_shift
    right $main_shift
    top 14vw
}

.main-title  {
    display flex
    flex-direction column
    align-items center
    font-size 1rem  
    margin-bottom 6.2em

    &__summary {
        display flex
        align-items center
        font-weight 700
        color $main_highlite-title
        text-transform uppercase
        letter-spacing .34em
        margin-bottom 1.5em

        &::before {
            content ''
            display block
            width 4em
            height 2px
            margin-right 1.5em
            background $main_highlite-title
        }
    }

    &__text {
        font-size 5.4em
        font-weight 700
        line-height 1.1
        // margin-bottom 0.5em

        &_regular {
            display block
            font-size 0.9em
            font-weight 400
        }
    }
}

.main-title__small {
    font-size 1rem
    margin-bottom 1.8em

    .main-title__text {
        font-size: 3.4em
        line-height 1.4
    }   

    .main-title__summary {
        color $main_highlite

        &::before {
            background $main_highlite
        }
    }
}

.main-title__centered {
    text-align center

    .main-title__summary {
        justify-content center

        &::after {
            content ''
            display block
            width 4em
            height 2px
            margin-left calc(1.5em - 0.36em)
            background $main_highlite
        }    
    }
}

.social-networks {
    position absolute
    left 0
    top 4rem
    display flex
    flex-direction column
    align-items center

    &__title {
        writing-mode vertical-rl
        margin-bottom 1.3rem
    }

    &__item {
        display flex
        flex-direction column
        margin-bottom 1rem
    }

    &__link {
        opacity 1
        transition opacity .3s

        &:hover {
            opacity .7
        }
    }    
}

.icon__instagram {
    width 1.3rem
    height 1.3rem    
    background url('/images/icons/instagram.svg') no-repeat center center
    background-size contain
}

.icon__twitter {
    width 1.3rem
    height 1.3rem    
    background url('/images/icons/twitter.svg') no-repeat center center
    background-size contain
}

.icon__facebook {
    width 1.3rem
    height 1.3rem    
    background url('/images/icons/facebook.svg') no-repeat center center
    background-size contain
}

.icon__arrow_downward {
    width 1rem
    height 1.4rem    
    background url('/images/icons/arrow_downward.svg') no-repeat center center
    background-size contain
}

.icon__arrow_rightward {
    width 1.6rem
    height 1.2rem    
    background url('/images/icons/arrow_rightward.svg') no-repeat center center
    background-size contain
}

.scroll-down {
    display flex
    cursor pointer
    opacity 1
    transition .3s

    &:hover {
        opacity .7
    }

    &__icon {
        margin .1rem 0 0 .5rem    
    }
}

.section {
    margin-bottom 14rem    
}

.section-cols {
   display flex
   justify-content space-between
   align-items center 
}

.section-col {
    &:first-child {
            width 40%   
        }

        &:last-child {
            width 44%   
        }

        &__images {
            width 100%    
        }
}

.arrow-link {
    display flex
    align-items center
    text-decoration none

    &__icon {
        margin 0.2em 0 0 0.4em    
    }   

    &_centered {
        justify-content center    
    }
}

.gallery {
    // max-height 985px

    &__slide {
        position relative
        width 100%
        padding-bottom 67%
        background-size cover
    }   

    &__content {
        position absolute
        bottom 0
        left 0
        right 0
        text-align center
        background linear-gradient(to top, rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0) 100%)
    } 
}